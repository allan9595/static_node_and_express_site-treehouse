extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        
        h1 #{data.project_name}

        
        p.lead.text-light
          | #{data.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        
        ul
          each val in data.technologies
            li #{val}

        
        a.button.expanded(href=`${data.live_link}` target="_blank") Live Demo
        a.button.expanded(href=`${data.github_link}` target="_blank") GitHub Repo
    
    
    each val, index in data.images
      if (index !== 0)
        img.image(src=`${val}`)
    